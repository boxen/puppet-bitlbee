<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>bitlbee</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>An IRC to other chat networks gateway</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "bitlbee::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "bitlbee::config::executable" %></string>
      <string>-D</string>
      <string>-p</string>
      <string><%= scope.lookupvar "bitlbee::config::port" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "bitlbee::config::consolefile" %></string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "bitlbee::config::consolefile" %></string>
  </dict>
</plist>
